{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "prisma:generate": "PATH=../../node_modules/.bin:$PATH PRISMA_GENERATE_SKIP_AUTOINSTALL=1 prisma generate --schema ../../prisma/schema.prisma",
    "prisma:migrate": "PATH=../../node_modules/.bin:$PATH PRISMA_GENERATE_SKIP_AUTOINSTALL=1 prisma migrate deploy --schema ../../prisma/schema.prisma",
    "prisma:migrate-dev": "PATH=../../node_modules/.bin:$PATH PRISMA_GENERATE_SKIP_AUTOINSTALL=1 prisma migrate dev --schema ../../prisma/schema.prisma",
    "prisma:studio": "PATH=../../node_modules/.bin:$PATH prisma studio --schema ../../prisma/schema.prisma",
    "prisma:seed": "PATH=../../node_modules/.bin:$PATH PRISMA_GENERATE_SKIP_AUTOINSTALL=1 prisma db seed --schema ../../prisma/schema.prisma"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/sensible": "^5.1.0",
    "@prisma/client": "5.19.1",
    "@slidesai/domain": "workspace:*",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "openai": "^4.56.0",
    "pino-pretty": "^13.1.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.15.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "prisma": "5.19.1",
    "tsx": "^4.16.5",
    "typescript": "^5.6.3"
  },
  "prisma": {
    "schema": "../../prisma/schema.prisma",
    "seed": "tsx ../../prisma/seed.ts"
  }
}
